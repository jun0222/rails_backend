<%= form_with(model: text_editor, local: true) do |form| %>
  <% if text_editor.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(text_editor.errors.count, "error") %> prohibited this text from being saved:</h2>
      <ul>
        <% text_editor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :content, '内容' %>
    <%= form.text_area :content, rows: 20, class: 'form-control editor-textarea' %>
  </div>

  <div class="actions">
    <%= form.submit '保存', class: 'btn btn-primary' %>
    <%= link_to 'キャンセル', text_editors_path, class: 'btn btn-secondary' %>
  </div>
<% end %>