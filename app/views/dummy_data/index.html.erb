<h1>Dummy Data Generator</h1>

<table>
  <thead>
    <tr>
      <th>Field</th>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Address</th>
      <th>UUID</th>
      <th>Phone Number</th>
      <th>Postal Code</th>
      <th>Email</th>
      <th>JWT</th>
      <th>Base64 Encoded</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Value</th>
      <td id="name" onclick="copyToClipboard('name')"><%= @name %></td>
      <td id="dob" onclick="copyToClipboard('dob')"><%= @dob %></td>
      <td id="address" onclick="copyToClipboard('address')"><%= @address %></td>
      <td id="uuid" onclick="copyToClipboard('uuid')"><%= @uuid %></td>
      <td id="phone" onclick="copyToClipboard('phone')"><%= @phone %></td>
      <td id="postal_code" onclick="copyToClipboard('postal_code')"><%= @postal_code %></td>
      <td id="email" onclick="copyToClipboard('email')"><%= @email %></td>
      <td id="jwt" onclick="copyToClipboard('jwt')"><%= @jwt %></td>
      <td id="base64" onclick="copyToClipboard('base64')"><%= @base64 %></td>
    </tr>
  </tbody>
</table>

<style>
  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 10px;
    border: 1px solid #ddd;
    text-align: left;
  }

  th {
    background-color: #f4f4f4;
    text-align: center;
  }

  td {
    cursor: pointer;
  }

  td:hover {
    background-color: #f0f0f0;
  }
</style>

<script>
  function copyToClipboard(elementId) {
    var text = document.getElementById(elementId).textContent;
    navigator.clipboard.writeText(text).then(function() {
      alert('Copied to clipboard: ' + text);
    }, function(err) {
      console.error('Could not copy text: ', err);
    });
  }
</script>
